{
  "id": "/phonebook",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "PhoneBook",
  "description": "PhoneBook API",
  "type": "object",
  "definitions": {
    "page": {
      "type": "number",
      "minLength": 1,
      "maxLength": 256,
      "default": 1,
      "description": "Page number"
    },
    "limit": {
      "type": "number",
      "enum": [
        25,
        50,
        100
      ],
      "default": 25,
      "description": "Limit per page"
    },
    "sort": {
      "type": "string",
      "enum": [
        "name",
        "surname",
        "phone",
        "addedAt"
      ],
      "default": "name",
      "description": "Sort field name"
    },
    "sortValue": {
      "type": "number",
      "enum": [
        -1,
        1
      ],
      "default": 1,
      "description": "Sort value (asc|desc)"
    },
    "search": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "default": "",
      "description": "Full text search filter (name|surname|phone|email)"
    },
    "shortStr": {
      "type": "string",
      "maxLength": 256
    },
    "longStr": {
      "type": "string",
      "maxLength": 1024
    },
    "identifier": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{24}$",
      "example": "58a446fcc26aaf13460533bd"
    },
    "email": {
      "type": "array",
      "uniqueItems": true,
      "maxLength": 25,
      "items": [
        {
          "type": "string",
          "format": "email",
          "minLength": 4,
          "maxLength": 70
        }
      ],
      "example": ["y.chikhrai@shipnext.com"],
      "description": "Array of contact emails"
    },
    "phone": {
      "type": "array",
      "uniqueItems": true,
      "maxLength": 25,
      "items": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/definitions/identifier"
          },
          "category": {
            "type": "string",
            "enum": [
              "mobile",
              "work",
              "home"
            ],
            "default": "mobile",
            "example": "mobile"
          },
          "value": {
            "type": "string",
            "maxLength": 14,
            "example": "+38096*******"
          }
        },
        "required": ["category", "value"]
      },
      "example": [
        {
          "_id": "58a446fcc26aaf13460533bd",
          "category": "mobile",
          "value": "+38096*******"
        }
      ],
      "description": "Array of phones with type"
    },
    "bornDate": {
      "type": "string",
      "format": "date",
      "formatMinimum": "1950-01-01",
      "example": "1992-10-19",
      "description": "Contact birth date"
    }
  },
  "properties": {
    "_id": {
      "$ref": "#/definitions/identifier",
      "description": "Unique ObjectId of contact"
    },
    "name": {
      "$ref": "#/definitions/shortStr",
      "example": "Yurii",
      "description": "Contact name"
    },
    "surname": {
      "$ref": "#/definitions/shortStr",
      "example": "Chikhrai",
      "description": "Contact surname"
    },
    "position": {
      "$ref": "#/definitions/shortStr",
      "example": "NodeJS developer as ShipNEXT.com",
      "description": "Contact position"
    },
    "email": {
      "$ref": "#/definitions/email"
    },
    "phone": {
      "$ref": "#/definitions/phone"
    },
    "bornDate": {
      "$ref": "#/definitions/bornDate"
    },
    "category": {
      "$ref": "#/definitions/identifier",
      "description": "Contact category for filter"
    },
    "information": {
      "$ref": "#/definitions/longStr",
      "example": "Cool dude.",
      "description": "Contact additional information"
    },
    "picture": {
      "type": "string",
      "example": "/images/58a446fcc26aaf13460533bd/awerasef.jpg",
      "description": "Contact avatar"
    },
    "addedAt": {
      "type": "string",
      "format": "date-time",
      "example": "2018-04-06T18:18:44.602Z",
      "description": "Date when contact was added to DB"
    },
    "addedBy": {
      "$ref": "#/definitions/identifier",
      "description": "Unique user ObjectId what add contact to DB"
    }
  },
  "links": [
    {
      "title": "GET list of contacts",
      "description": "Get list of contacts with pagination and search",
      "href": "phonebook?page={#/definitions/page}&limit={#/definitions/limit}&sort={#/definitions/sort}&sortValue={#/definitions/sortValue}",
      "method": "GET",
      "authentication_needed": true,
      "required": [],
      "schema": {
        "type": "object",
        "properties": {
          "page": {
            "$ref": "#/definitions/page"
          },
          "limit": {
            "$ref": "#/definitions/limit"
          },
          "sort": {
            "$ref": "#/definitions/sort"
          },
          "sortValue": {
            "$ref": "#/definitions/sortValue"
          },
          "search": {
            "$ref": "#/definitions/search"
          },
          "category": {
            "$ref": "#/definitions/identifier"
          }
        }
      },
      "targetSchema": {
        "type": "array",
        "uniqueItems": true,
        "maxLength": 25,
        "items": {
          "type": "object",
          "properties": {
            "_id": {
              "$ref": "#/definitions/identifier",
              "description": "Unique ObjectId of contact"
            },
            "name": {
              "$ref": "#/definitions/shortStr",
              "example": "Yurii",
              "description": "Contact name"
            },
            "surname": {
              "$ref": "#/definitions/shortStr",
              "example": "Chikhrai",
              "description": "Contact surname"
            },
            "picture": {
              "type": "string",
              "example": "/images/58a446fcc26aaf13460533bd/awerasef.jpg",
              "description": "Contact avatar"
            }
          }
        }
      }
    },
    {
      "title": "POST Add new contact",
      "description": "Add new contact to phonebook",
      "href": "/phonebook",
      "method": "POST",
      "authentication_needed": true,
      "required": [],
      "schema": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/shortStr"
          },
          "surname": {
            "$ref": "#/definitions/shortStr"
          },
          "position": {
            "$ref": "#/definitions/shortStr"
          },
          "email": {
            "$ref": "#/definitions/email"
          },
          "phone": {
            "$ref": "#/definitions/phone"
          },
          "bornDate": {
            "$ref": "#/definitions/bornDate"
          },
          "category": {
            "$ref": "#/definitions/identifier"
          },
          "information": {
            "$ref": "#/definitions/longStr"
          }
        }
      },
      "targetSchema": {
        "type": "object",
        "properties": {
          "message": {
            "default": "Contact added successful"
          },
          "id": {
            "$ref": "#/definitions/identifier"
          }
        }
      }
    }
  ]
}